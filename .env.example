# 环境配置示例文件
# 复制此文件为 .env.development, .env.staging, .env.production 并填入实际值

# 应用环境: development, staging, production
APP_ENV=development

# Flask配置
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
DEBUG=True

# 数据库配置
# SQLite (默认)
DATABASE_URL=sqlite:///users.db

# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/heart_sync

# 服务器配置
HOST=0.0.0.0
PORT=5000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 部署配置
DEPLOY_USER=deploy
DEPLOY_HOST=your-server-ip
DEPLOY_PATH=/var/www/heart_sync
DEPLOY_KEY=~/.ssh/id_rsa

# Git配置
GIT_REPO=your-git-repo-url
GIT_BRANCH=main

# 备份配置
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/www/heart_sync/backup

# 通知配置（可选）
# SLACK_WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=admin@example.com

# 健康检查
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_URL=http://localhost:5000/health

# 回滚配置
ROLLBACK_ENABLED=True
ROLLBACK_MAX_VERSIONS=5
